<h2 class="text-4xl font-extrabold text-pink-600 mb-10 text-center tracking-tight drop-shadow">My Bookings</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 px-2 md:px-0">
  <% if (bookings.length===0) { %>
    <div class="col-span-full text-center text-gray-400 text-xl">No bookings found.</div>
    <% } %>
      <% bookings.forEach(function(booking) { %>
        <div
          class="bg-gradient-to-br from-pink-100 via-white to-purple-100 rounded-2xl shadow-2xl overflow-hidden hover:scale-105 hover:shadow-pink-300 transition-all duration-300 border border-pink-200">
          <div class="relative">
            <% if (booking.homeId && booking.homeId.photo) { %>
              <img src="<%= booking.homeId.photo %>" alt="Home Image"
                style="width:200px; height:150px; object-fit:cover; border-radius:8px;">
              <% } else { %>
                <img src="/images/no-image.png" alt="No Image"
                  style="width:200px; height:150px; object-fit:cover; border-radius:8px;">
                <% } %>
                  <span
                    class="absolute top-2 right-2 bg-white/80 text-pink-600 px-3 py-1 rounded-full text-xs font-bold shadow">Booked</span>
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold text-pink-700 mb-2 tracking-wide">
              <%= booking.homeId ? (booking.homeId.houseName || booking.homeId.name) : 'Home Deleted' %>
            </h3>
            <div class="flex flex-wrap gap-2 mb-2">
              <span class="bg-pink-200 text-pink-800 px-2 py-1 rounded text-xs font-semibold">
                <%= booking.homeId ? booking.homeId.location : 'N/A' %>
              </span>
              <span class="bg-green-200 text-green-800 px-2 py-1 rounded text-xs font-semibold">
                $<%= booking.homeId ? booking.homeId.price : 'N/A' %> / night
              </span>
            </div>
            <div class="text-gray-700 mb-1"><span class="font-semibold">Date:</span>
              <%= booking.date ? booking.date.toDateString() : '' %>
            </div>
            <div class="text-gray-700 mb-1"><span class="font-semibold">Guests:</span>
              <%= booking.guests %>
            </div>
            <div class="flex items-center mb-4">
              <span class="text-yellow-400 text-lg">â˜…</span>
              <span class="ml-1 text-gray-700 font-semibold">
                <%= booking.homeId ? booking.homeId.rating : 'N/A' %> / 5
              </span>
            </div>
            <form action="/bookings/cancel/<%= booking._id %>" method="POST" class="mt-2">
              <button type="submit"
                class="bg-gradient-to-r from-pink-500 to-red-500 text-white px-4 py-2 rounded-lg shadow hover:from-red-500 hover:to-pink-500 transition-all font-bold w-full">
                Cancel Booking
              </button>
            </form>
          </div>
        </div>
        <% }) %>
</div>